{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // enable the React 17+ JSX transform
    "jsx": "react-jsx",
    // module resolution for node packages
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // carry over your path mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // you can keep these as before
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  },

  // make sure TS actually sees all your source files
  "include": ["src"]
}
