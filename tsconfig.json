{
  "extends": "./tsconfig.json.recommended",
  "compilerOptions": {
    "types": [
      "node",
      "react",
      "react-dom",
      "vite/client",
      "vitest/globals"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["src/tests", "node_modules"]
}
