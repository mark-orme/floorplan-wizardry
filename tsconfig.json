// tsconfig.json
{
  "compilerOptions": {
    // Use the new JSX transform so you donâ€™t need `import React...`
    "jsx": "react-jsx",
    "module": "ESNext",           

    // Standard Node module resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Your path aliasing
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // loosen up strictness to mirror your old config
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  },

  // TypeScript will compile everything under src/
  "include": ["src"]
}
